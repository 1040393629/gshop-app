.order_header
  background-color #02a774
  position fixed;
  z-index 100
  left 0
  top 0
  width 100%
  height 45px
  .order_header_title
    position absolute
    top 50%
    left 40%
    transform: translate(-50%, -50%)
    width: 30%
    color: #fff
    text-align: center
    .header_title_text
      width: 150%
      font-size: 20px
      color: #fff
      display: block
.ordet_container
  display flex                                        
  flex-direction column
  justify-content center
  align-items center
  margin-top 100px
  .tip
    font-size 16px
    text-align center
    margin 10px 0 
  .login_btn
    width 70px
    height 35px
    text-align center
    background-color #02a774
    border-radius 8px
    outline none