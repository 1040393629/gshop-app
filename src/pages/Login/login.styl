#app
  width: 100%
  height 100%
  .off
  .on
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index 200
    .login_container
      width: 100%
      height 100%
      background-color: #fff
      .login_inner
        padding-top 60px
        width 80%
        margin 0 auto
        .login_header
          .login_logo
            font-size 40px
            font-weight bold
            color #02a774
            text-align center
          .login_header_title
            padding-top 40px
            text-align center
            >a
              color #333
              font-size 14px
              padding-bottom 4px
              &:first-child
                margin-right 40px
              &.on
                color #02a774
                font-weight 700
                border-bottom 2px solid #02a774