#app
  width: 100%
  height 100%
  background-color: #eee
  .search_header
    width: 100%
    display: flex
    background-color: #fff !important
    text-align: center
    justify-content: center
    align-items: center
    position relative
    .search_sort
      position: absolute
      top: -3px
      left:5px
    .search_form
      clearFix()
      display: flex
      height: 80% 
      text-align: center
      input
        height 35px
        width: 100%
        padding: 0 30px
        border-radius: 20px
        font-weight: bold
        outline: none
        background-color: #f2f2f2
      input::-webkit-input-placeholder
        text-align: center
      .search_input
          padding-left: 5px
      .search_text
        float right 
        font-size: 18px
        width: 40px
        position absolute
        top: 12px
        right 10px