#app
  width: 100%
  height 100%
  background-color: #f5f5f5
  .search_header
    width: 100%
    height: 45px
    display: flex
    background-color: #fff !important
    text-align: center
    justify-content: center
    align-items: center
    position relative
    .search_sort
      position: absolute
      top: -3px
      left:5px
    .search_form
      clearFix()
      display: flex
      height: 80% 
      text-align: center
      input
        height 35px
        width: 100%
        padding: 0 30px
        border-radius: 20px
        font-weight: bold
        outline: none
        background-color: #f2f2f2
      input::-webkit-input-placeholder
        text-align: center
      .search_input
          padding-left: 5px
      .search_text
        text-align: center
        line-height: 35px
        font-size: 14px
        width: 30px
        position absolute
        top: 4px
        right 5px
        margin: 0
  .list
    .list_container
      background-color: #fff;
      .list_li
        display: flex
        justify-content: center
        padding: 10px
        border-bottom: 1px solid $bc;
        .item_left
          margin-right:10px
          .restaurant_img
            width 50px
            height 50px
            display: block
        .item_right
          font-size: 12px
          flex: 1
          .item_right_text
            p
              line-height: 12px
              margin-bottom: 6px
              &:last-child
                margin-bottom: 0
  .search_none
    width: 100%
    height 1000px
    background-color: #fff
    text-align: center
